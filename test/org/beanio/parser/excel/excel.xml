<?xml version='1.0' encoding='UTF-8' ?>
<beanio xmlns="http://www.beanio.org/2012/03" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <stream name="e1" format="excel" resourceBundle="org.beanio.parser.excel.e1_messages">
    <record name="record1" class="map" minLength="2" maxLength="4">
      <field name="field1" />
      <field name="field2" />
      <field name="field3" />
      <field name="field4" required="true" />
    </record>
  </stream>

  <stream name="e2" format="excel" resourceBundle="org.beanio.parser.excel.e1_messages">
    <record name="record1" class="map" minLength="2" maxLength="4">
      <field name="field1" />
      <field name="field2" />
      <field name="field3" minOccurs="0" />
      <field name="field4" minOccurs="0" />
    </record>
  </stream>

  <stream name="e3" format="excel" resourceBundle="org.beanio.parser.excel.e1_messages">
    <record name="record1" class="map">
      <field name="field1" collection="array" minOccurs="0" maxOccurs="unbounded" length="3" padding="x" justify="right" />
    </record>
  </stream>

  <stream name="e4" format="excel" resourceBundle="org.beanio.parser.excel.e1_messages">
    <parser>
      <property name="sheetName" value="testOutput" />
      <property name="password" value="testPassword" />
      <property name="excelType" value="xlsx"/>
    </parser>
    <record name="record1" class="map">
      <field name="field1" collection="array" minOccurs="0" maxOccurs="unbounded" />
    </record>
  </stream>

</beanio>