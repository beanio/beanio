<beanio xmlns="http://www.beanio.org/2011/01" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.beanio.org/2011/01 http://www.beanio.org/2011/01">

  <typeHandler type="java.util.Date" class="org.beanio.types.DateTypeHandler">
    <property name="pattern" value="MMddyy" />
  </typeHandler>

  <stream name="f1" format="fixedlength">
    <writer>
      <property name="lineSeparator" value="" />
    </writer>
    <record name="record" class="map">
      <field name="default" length="10" trim="false" />
      <field name="number" type="int" length="10" justify="right" padding="0" />
      <field name="padx" length="10" justify="left" padding="x" trim="false" />
      <field name="pos40" position="41" length="5" trim="false" />
    </record>
  </stream>

  <stream name="f2" format="fixedlength" resourceBundle="org.beanio.parser.fixedlength.f2_messages">
    <writer>
      <property name="lineSeparator" value="" />
    </writer>
    <record name="record" class="map" minLength="10" maxLength="20">
      <field name="field1" length="5" />
      <field name="field2" length="5" />
      <field name="field3" length="5" />
    </record>
  </stream>

  <stream name="f3" format="fixedlength" ordered="false">
    <record name="record0" class="map">
      <field name="field1" rid="true" literal="1000" />
    </record>
    <record name="record1" class="map">
      <field name="field1" rid="true" length="5" literal="00001"/>
      <field name="field2" length="5" />
      <field name="field3" length="5" />
    </record>
    <record name="record2" class="map">
      <field name="field1" rid="true" length="5" literal="00002"/>
      <field name="field2" length="5" />
    </record>
  </stream>

</beanio>